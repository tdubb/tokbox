<h1>Appointments#index</h1>
<p>Find me in app/views/appointments/index.html.erb</p>

<%= link_to "Create New Appointment", appointments_create_path() %>
<% @appointments.each do |appointment| %>
  <h3><%= appointment.id %></h3>
  <% if appointment.patient_id.nil? %>
    <%= link_to "Join as Patient", appointments_update_path(id: appointment.id, type: "patient") %>
  <% end %>
  <% if appointment.doctor_id.nil? %>
    <br />
    <%= link_to "Join as Doctor", appointments_update_path(id: appointment.id, type: "doctor") %>
  <% end %>
<% end %>
